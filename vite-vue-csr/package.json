{
  "name": "vite-vue-csr",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Vite + Vue Client-Side Rendering Reference App",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:gherkin:component": "playwright test tests/component/gherkin.spec.js",
    "test:gherkin:live": "playwright test tests/live-dependency/gherkin.spec.js",
    "test:gherkin": "npm run test:gherkin:component && npm run test:gherkin:live",
    "docker:build": "docker build -t vite-vue-csr .",
    "docker:run": "docker run -p 5173:80 vite-vue-csr",
    "docker:compose": "docker-compose up -d"
  },
  "dependencies": {
    "vue": "^3.3.8",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.4.0",
    "@vue/tsconfig": "^0.4.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vue-tsc": "^1.8.22",
    "eslint": "^8.53.0",
    "eslint-plugin-vue": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "jest": "^29.7.0",
    "@vue/test-utils": "^2.4.0",
    "@testing-library/vue": "^7.0.0",
    "@testing-library/jest-dom": "^6.1.4",
    "jest-environment-jsdom": "^29.7.0",
    "@playwright/test": "^1.39.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 